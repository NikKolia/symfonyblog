{% extends 'BloggerBlogBundle::base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
        <h1>Products list</h1>

        {% for product in products %}
            <a href="{{ path('BloggerBlogBundle_product', {id: product.id}) }}">Product {{ product.id }}:{{ product.title }}</a><br>
        {% endfor %}

{% endblock %}